{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("percipiolondon\\craftstaff\\assetbundles\\craftstaff\\CraftstaffAsset") %}
{% do view.registerAssetBundle("percipiolondon\\craftstaff\\assetbundles\\indexcpsection\\IndexCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/Craft Staff Management/craft-staff/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "staff-management" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('staff-management') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@percipiolondon/craftstaff/assetbundles/indexcpsection/dist', true) ~ '/img/Index-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('staff-management') }}</a>
    </div>
{% endset %}

{# The content of the CP Section#}
{% set content %}
    <h2>{{ "Index CP Section body goes here"|t('staff-management') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
