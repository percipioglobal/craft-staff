{%- import "_includes/forms" as forms -%}

<hr/>

<h2>Group Income Protection fields</h2>

<section class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
        {{ forms.dateField({
            label: "Rate Review Guarantee Date"|t('staff-management'),
            id: 'arrBenefitTypeGroupIncomeProtection[rateReviewGuaranteeDate]',
            name: 'arrBenefitTypeGroupIncomeProtection[rateReviewGuaranteeDate]',
            value: variant ? variant["rateReviewGuaranteeDate"] ?? '' : '',
            errors: errors['rateReviewGuaranteeDate'] ?? null,
        }) }}
    </div>

    <div>
        {%- set costingBasisOptions = [
            {
                label: 'Choose a costing basis',
                value: null
            },
            {
                label: 'Unit Rated',
                value: 'unit'
            },
            {
                label: 'SP Costed',
                value: 'sp'
            },
        ] -%}
        {{ forms.selectField({
            label: "Costing Basis"|t('staff-management'),
            id: 'arrBenefitTypeGroupIncomeProtection[costingBasis]',
            name: 'arrBenefitTypeGroupIncomeProtection[costingBasis]',
            value: variant ? variant["costingBasis"] ?? '' : '',
            options: costingBasisOptions,
            errors: errors['costingBasis'] ?? null,
            required: false,
        }) }}
    </div>

    <div>
        {%- set unitRateSuffixOptions = [
            {
                label: 'Choose a rate suffix',
                value: null
            },
            {
                label: '%',
                value: '%'
            },
            {
                label: '‰',
                value: '‰'
            },
        ] -%}
        {{ forms.selectField({
            label: "Unit Rate Suffix"|t('staff-management'),
            id: 'arrBenefitTypeGroupIncomeProtection[unitRateSuffix]',
            name: 'arrBenefitTypeGroupIncomeProtection[unitRateSuffix]',
            value: variant ? variant["unitRateSuffix"] ?? '' : '',
            options: unitRateSuffixOptions,
            errors: errors['unitRateSuffix'] ?? null,
            required: false,
        }) }}
    </div>

    <div>
        {{ forms.textField({
            label: "Unit Rate"|t('staff-management'),
            id: 'arrBenefitTypeGroupIncomeProtection[unitRate]',
            name: 'arrBenefitTypeGroupIncomeProtection[unitRate]',
            type: 'number',
            value: variant ? variant['unitRate'] : '',
            errors: errors['unitRate'] ?? null,
            required: false,
        }) }}
    </div>

    <div>
        {{ forms.textField({
            label: "Free Cover Level Automatic Acceptance Limit"|t('staff-management'),
            id: 'arrBenefitTypeGroupIncomeProtection[freeCoverLevelAutomaticAcceptanceLimit]',
            name: 'arrBenefitTypeGroupIncomeProtection[freeCoverLevelAutomaticAcceptanceLimit]',
            type: 'number',
            value: variant ? variant['freeCoverLevelAutomaticAcceptanceLimit'] : '',
            errors: errors['freeCoverLevelAutomaticAcceptanceLimit'] ?? null,
            required: false,
        }) }}
    </div>

    <div>
        {%- set dateRefreshFrequencyOptions = [
            {
                label: 'Choose a date refresh frequency',
                value: null
            },
            {
                label: 'Annually',
                value: 'annual'
            },
            {
                label: 'Monthly',
                value: 'monthly'
            },
        ] -%}
        {{ forms.selectField({
            label: "Date Refresh Frequency"|t('staff-management'),
            id: 'arrBenefitTypeGroupIncomeProtection[dateRefreshFrequency]',
            name: 'arrBenefitTypeGroupIncomeProtection[dateRefreshFrequency]',
            value: variant ? variant["dateRefreshFrequency"] ?? '' : '',
            options: dateRefreshFrequencyOptions,
            errors: errors['dateRefreshFrequency'] ?? null,
            required: false,
        }) }}
    </div>
</section>